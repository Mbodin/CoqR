{
	"name": "CoqR",
	"version": "1.0",
	"description": "A Coq formalisation of the R programming language",
	"license": "GPL-2.0",
	"esy": {
		"build": "make",
		"buildsInSource": true,
		"buildEnv": {
			"COQBIN": "#{@opam/coq.bin}/",
			"COQLIB": "#{@opam/coq.lib}/coq/",
			"COQPATH": "#{coq-flocq.install}/coq:#{coq-prelude.install}/coq"
		}
	},
	"scripts": {
		"run": "make run",
		"run_bisect": "make run_bisect",
		"lrun": "make lrun",
		"lrun_bisect": "make lrun_bisect",
		"clean": "make clean_all",
		"report": "make report"
	},
	"dependencies": {
		"ocaml": ">=4.5",
		"@opam/ocamlfind": "1.8.1",
		"@opam/ocamlbuild": "*",
		"@opam/menhir": "*",
		"@opam/coq": "^8.13",
		"coq-flocq": "3.1.2",
		"coq-paco": "*",
		"@opam/extlib": "*",
		"@opam/bisect": "*",
		"coq-prelude": "github:Mbodin/coq-prelude#f4a63ff15337a6edd69923b88440d78e8e1c7a2f"
	},
	"resolutions": {
		"coq-paco": {
			"source": "github:snu-sf/paco#3b686f0defa71dca3938b95893a24ad7cefea450",
			"override": {
				"dependencies": {
						"@opam/coq": "^8.13"
					},
				"buildEnv": {
					"HOME": "#{self.target_dir}",
					"COQBIN": "#{@opam/coq.bin}/"
				},
				"build": [
						["make", "-C", "src"],
						["make", "-C", "src", "doc"],
						["make", "-C", "src", "install-doc"]
					]
			}
		},
		"coq-flocq": {
			"source": "git:https://gitlab.inria.fr/flocq/flocq.git#c4a5db7d7a018a3c88e51da45b8910aca3e57de1",
			"override": {
				"version": "3.1.2",
				"dependencies": {
					"@opam/coq": "^8.13",
					"@opam/conf-autoconf": "*",
					"@opam/conf-g++": "*"
				},
				"buildEnv": {
					"HOME": "#{self.target_dir}",
					"COQBIN": "#{@opam/coq.bin}",
					"COQLIB": "#{@opam/coq.lib}/coq/",
					"COQPATH": "#{@opam/coq.lib}/coq/user-contrib/"
				},
				"build": [
					[ "autoconf" ],
					[ "./configure", "--libdir=#{self.install}/coq/Flocq" ],
					[ "./remake", "--jobs=2" ]
				],
				"install": [
					[ "./remake", "install" ]
				]
			}
		}
	}
}

